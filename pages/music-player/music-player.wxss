/* pages/music-player/music-player.wxss */
.player {
  text-align: center;
  margin: 20rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
}
.song {
  font-size: 40rpx;
}
.singer {
  font-size: 24rpx;
  font-weight: 100;
}
.poster {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
  margin: 40rpx 0;
  position: relative;
}
.lyricBox{
  height: 180rpx;
  overflow: hidden;
  font-size: 12px;
  opacity: 0.5;
}
.lyric {
  height: 30px;
}
.active {
  color: #31C27C;
}
.play-control {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-25rpx, -25rpx);
  width: 50rpx;
  height: 50rpx;
}
.other-control {
  display: flex;
  justify-content: space-evenly;
  margin: 40rpx 0;
}
.download {
  width: 60rpx;
  height: 60rpx;
  margin-right: 40rpx;
}
.collect {
  width: 60rpx;
  height: 60rpx;
}
.share {
  background-color: #31C27C;
  font-size: 30rpx;
  line-height: 60rpx;
  color: white;
  height: 60rpx;
  border-radius: 30rpx;
  border: none;
  margin-bottom: 40rpx;
}
.hit {

  margin: 20rxp 40rpx;
  display: flex;
  justify-content: space-between;
}
.more-comment{
  text-align: center;
  font-size: 24rpx;
  color: white;
  opacity: 0.5;
  padding-bottom: 80rpx;
}
.mask-bg {
  position: fixed;
  top: 0;
  left: 0;
  z-index: -2;
  width: 100%;
  height: 100%;
  filter: blur(200rpx);
}
.mask-img{
  width: 100%;
  height: 100%;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.35);
}
