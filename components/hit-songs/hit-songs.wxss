.hit-songs {
  margin: 20rpx 40rpx;
  display: flex;
  height: 300rpx;
}
.hit-songs-item{
  margin-right: 20rpx;
}
.hit-img{
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-radius: 20rpx;
}
.hit-play {
  width: 24rpx;
  height: 24rpx;
}
.hit-times {
  color: white;
  font-size: 24rpx;
  background-color: rgba(0, 0, 0, .4);
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}
.hit-slogan {
  font-size: 24rpx;
}