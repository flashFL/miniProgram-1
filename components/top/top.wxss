.top{
  margin: 20rpx 40rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  background-color: rgba(0, 0, 0, .1);
  height: 200rpx;
}
.top-left {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0 10rpx 20rpx;
}
.title {
  font-size: 24rpx;
}
.name {
  font-size: 24rpx;
}
.singer {
  font-size: 24rpx;
  color: grey;
}
.top-img{
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;

}
.top-play {
  width: 24rpx;
  height: 24rpx;
}
.top-times {
  color: white;
  font-size: 24rpx;
  background-color: rgba(0, 0, 0, .4);
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}